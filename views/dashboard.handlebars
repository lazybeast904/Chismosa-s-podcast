<section class="row row-center">
  <form id="gossipForm" class="column">
    <fieldset class="signup-form">
      <h2 class="center">Submit some Gossip!</h2>
      <label for="titleField">Title</label>
      <input type="text" placeholder="A good label for this story" id="titleField">
      <label for="storyField">Story</label>
      <input type="text" placeholder="All the juicy details" id="storyField">
      <label for="sourceField">Source</label>
      <input type="text" placeholder="reddit, first-hand, friend, etc" id="sourceField">
      <label for="anon">Anonymous</label>
      <input type="checkbox" id="anon">
    </fieldset>
    <nav class="row">
      <div class="column column-20"></div>
      <button type="submit" id="gossipForm" class="column column-60">Submit</button>
      <div class="column column-20"></div>
    </nav>
    <script src="/js/gossip.js"></script>